<!-- views/users.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Github OAuth Usuarios</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      body {
        padding-top: 70px;
      }

      aside {
        display: flex;
        justify-content: center;
      }

      img {
        width: 50px;
        margin: .5em;
      }

      .position-btn {
        display: flex;
        flex-direction: flex-start;
        width: 70px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron text-center text-primary">
        <div class="head">
          <a href="/success" class="btn btn-primary position-btn">Volver</a>
          <h1><span>Usuarios</span></h1>
        </div>
        <hr />
        <div class="card">
          <div class="card-body">
            <ol>
              <% userFinder.forEach(function(user) { %>
                  <li>
                      <span>Login: <strong><%= user.login %></strong><br></span>
                      <span>Id: <strong><%= user.id %></strong><br></span>
                      <span>URL: <a target="_blank" href=<%= user.html_url %>><strong><%= user.html_url %></strong></a></span><br>
                      <aside>
                        <img src=<%= user.avatar_url %> alt=<%= user.login %>>
                      </aside>
                      <hr>
                  </li>
              <% }); %>
          </ol>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
