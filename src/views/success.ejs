<!-- views/success.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Github OAuth</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      body {
        padding-top: 70px;
      }

      a {
        text-decoration: none;
        background-color: rgb(37, 90, 176);
        color: white;
        padding: .6em;
        border-radius: 1em;
        transition: .5s;
      }

      a:hover {
        text-decoration: none;
        color: white;
        background-color: rgba(37, 90, 176, .7);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1 class="text-primary text-center">
          <span class="fa fa-github"></span> Github Information
        </h1>
        <div class="row">
          <div class="col-sm-6">
            <div>
              <p>
                <strong>Name</strong>: <%= userData.name %><br />
                <strong>Username</strong>: <%= userData.login %><br />
                <strong>Bio</strong>: <%= userData.bio %><br />
              </p>
              <a href="/users">Usuarios Registrados</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
